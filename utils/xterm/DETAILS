          SOURCE=$MODULE-$VERSION.tgz
      SOURCE_URL=ftp://ftp.invisible-island.net/$MODULE
      SOURCE_VFY=sha256:e431bb60b5a387b0032bcb1060cb74e90daa75fe5281fe8c4f8d073b84de8242
